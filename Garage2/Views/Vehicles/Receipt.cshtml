@model Garage2.Models.Receipt

@{
				/**/

				ViewBag.Title = "Receipt";
}

<h2>Receipt</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">

		
		<dl class="dl-horizontal">
			<dt>
				Registration number:
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Registration)
			</dd>

			<dt>
				Check in date:
			</dt>

			<dd>
				@Html.DisplayFor(model => model.CheckInDate)
			</dd>

			<dt>
				Check out date:
			</dt>

			<dd>
				@Html.DisplayFor(model => model.CheckOutDate)
			</dd>

			<dt>
				Total time:
			</dt>

			<dd>
				@Html.DisplayFor(model => model.TotalTime)
			</dd>

			<dt>
				Price
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Price) SEK
			</dd>
		</dl>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Brief" class="btn btn-success" />
		</div>
	</div>
}
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

