@model Garage2.Models.Vehicle
@{
	ViewBag.Title = "Receipt";
}

<h2>Receipt</h2>

<div>
	<h4>Vehicle</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			Registration Number:
		</dt>

		<dd>
			<p>@ViewBag.Regnum</p>
		</dd>

		<dt>
			Check In date:
		</dt>

		<dd>
			<p>@ViewBag.CheckinDate</p>
		</dd>
		<dt>
			Check out date:
		</dt>

		<dd>
			<p>@ViewBag.CheckoutDate</p>
		</dd>
		<dt>
			Total Time:
		</dt>

		<dd>
			<p>@ViewBag.TotalTime</p>
		</dd>

		<dt>
			Price:
		</dt>

		<dd>
			<p>@ViewBag.Price SEK</p>
		</dd>
	</dl>
</div>
<p>

</p>

@using (Html.BeginForm()){
	@Html.AntiForgeryToken()

	<div class="form-actions no-color">
		<input type="submit" value="Confirm" class="btn btn-warning" /> 
	</div>
}


