@model Garage2.Models.Receipt

@{
	ViewBag.Title = "Receipt";
}

<h2>Receipt</h2>

<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			Registration number:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Registration)
		</dd>

		<dt>
			Check in date:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CheckInDate)
		</dd>

		<dt>
			Check out date:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CheckOutDate)
		</dd>

		<dt>
			Total time:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.TotalTime)
		</dd>

		<dt>
			Price
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Price)
		</dd>
	</dl>
</div>
<div class="form-group">
	<div class="col-md-offset-2 col-md-10">
		<input type="submit" value="Brief" class="btn btn-success" />
	</div>
</div>
@Html.ActionLink("Back to Parked Vehicles", "Index")
}
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

